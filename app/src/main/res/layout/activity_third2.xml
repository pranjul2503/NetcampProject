<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:backgroundTintMode="screen"
android:background="#2b1d1d">

    <Button
        android:id="@+id/button30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="LOGOUT" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Media Player"
    android:id="@+id/button31"
    android:layout_above="@+id/button32"
    android:layout_alignRight="@+id/button32"
    android:layout_alignEnd="@+id/button32"
    android:layout_alignLeft="@+id/button32"
    android:layout_alignStart="@+id/button32" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Calculator"
    android:id="@+id/button32"
    android:layout_above="@+id/button33"
    android:layout_alignLeft="@+id/button33"
    android:layout_alignStart="@+id/button33"
    android:layout_alignRight="@+id/button33"
    android:layout_alignEnd="@+id/button33" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Camera"
    android:id="@+id/button33"
    android:layout_above="@+id/button34"
    android:layout_alignRight="@+id/button34"
    android:layout_alignEnd="@+id/button34"
    android:layout_alignLeft="@+id/button34"
    android:layout_alignStart="@+id/button34" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Special Functions"
    android:id="@+id/button34"
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="20dp"/>

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/imageView30"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_above="@+id/button31"
    android:layout_below="@+id/button30"
    android:src="@drawable/z" />

</RelativeLayout>
